<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="desktop.details.action.impl.SingleConditionController">
   <children>
      <Label text="Single Condition" />
      <Separator />
      <HBox spacing="10.0">
         <children>
            <VBox>
               <children>
                  <Label text="Main Entity" />
                  <Label text="Secondary Entity" />
                  <Label text="Argument 1" />
                  <Label text="Argument 2" />
                  <Label text="Opertator" />
                  <Label text="Number of then actions" />
                  <Label text="Number of else actions" />
               </children>
            </VBox>
            <VBox>
               <children>
                  <Label fx:id="mainEntLabel" text="Label" />
                  <Label fx:id="secEntLabel" text="Label" />
                  <Label fx:id="arg1Label" text="Label" />
                  <Label fx:id="arg2Label" text="Label" />
                  <Label fx:id="opertarorLabel" text="Label" />
                  <Label fx:id="thenLabel" text="Label" />
                  <Label fx:id="elseLabel" text="Label" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>
